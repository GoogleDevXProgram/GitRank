<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.text.TextUtils" />

        <import type="android.view.View" />

        <variable name="topUser" type="com.example.gitrank.data.entities.TopUsers"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_self_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ranking"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        tools:text="10"
                        android:text="@{topUser.id}"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/user_profile_avatar"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@{topUser.avatarUrl}"
                        android:contentDescription="user avatar"
                        tools:src="@tools:sample/avatars"
                        android:padding="8dp"
                        />

                    <TextView
                        android:id="@+id/githubUserName"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@{topUser.githubUsername}"
                        tools:text="@tools:sample/first_names" />

                </LinearLayout>

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/txt_followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_followers"
                        tools:text="@string/txt_followers"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:id="@+id/userFollowers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{topUser.followers}"
                        tools:text="@tools:sample/us_zipcodes"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>